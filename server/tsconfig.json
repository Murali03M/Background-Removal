{
	"compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,  
	"allowImportingTsExtensions": true, 
    "noEmit": true ,                    
    "strict": true,
    "skipLibCheck": true,
	
  },

	"include": [
		"typings/**/*",
		"src/**/*"
	],
  "exclude": ["node_modules"]

}
