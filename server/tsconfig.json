{
	"compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,  
	"allowImportingTsExtensions": true, 
    "noEmit": true ,                    
    "strict": true,
    "skipLibCheck": true,
	
  },

	"include": [
		"typings/**/*",
		"src/**/*"
	]
}
